{
    "name": "rentpost/tu-shareable",
    "description": "Client library for TransUnion - ShareAble for Rentals API.",
    "license": "proprietary",
    "authors": [
        {
            "name": "Pekka Laiho",
            "email": "pekka.i.laiho@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",

        "psr/log": "^3.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",

        "symfony/validator": "^6.0"
    },
    "require-dev": {
        "monolog/monolog": "^2.3",
        "guzzlehttp/guzzle": "^7.4",
        "phpunit/phpunit": "^9.5",

        "rentpost/coding-standard-php": "dev-master"
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:rentpost/coding-standard-php.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Rentpost\\TUShareable\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
